<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="w-100 h-100 bg-zinc-800">
    <div class="text-white flex">
      <% if(users.length>0) { users.forEach((user)=>{ %>
      <div class="w-64 min-h-72 bg-zinc-700 m-10 rounded-lg p-3">
        <div>
          <img class="rounded-md object-cover object-top h-52 w-64" src="<%=
          user.image %>"" alt="" />
        </div>
        <div>
          <p class="mt-2 text-2xl"><%= user.name %></p>
          <p class="text-sm text-black"><%= user.email %></p>
        </div>
        <div class="flex mt-5">
          <a href="/edit/<%= user._id %>" class="flex-1 text-zinc-200">Edit</a>
          <a href="/delete/<%= user._id %>" class="ml-aut0 text-red-500"
            >Delete</a
          >
        </div>
      </div>
      <% }) } else { %>
      <h1>No Records</h1>
      <% } %>
    </div>
  </body>
</html>
